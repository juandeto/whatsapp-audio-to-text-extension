{
  "manifest_version": 3,
  "name": "WhatsApp Audio-to-Text",
  "version": "1.0",
  "description": "Converts audio files downloaded from WhatsApp Web to text.",
  "permissions": [
    "downloads",
    "activeTab"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
